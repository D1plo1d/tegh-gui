.directional-pad
  width 57*3px
  margin-left auto
  margin-right auto

  &:last-child
    margin-top: 24px

  .btn-up, .btn-down
    margin-left 57px
    margin-right 57px

  .btn-down
    clear both

  .btn-left
    float left
    margin-left: -2px

  .btn-right
    float right
    margin-right 2px

  .btn-left, .btn-right
    margin-top: 4px
    margin-bottom: 4px

  .axis-name
    display none
    font-size 160%
    font-weight 300
    color #b4b4b4
    position absolute
    margin-top 40px
    margin-left 15px

.sub-panel:hover .directional-pad .axis-name
    display block

  .btn-down:nth-child(3)
    margin-top 20px

.side-panel

  .jog-panel:first-child
    h4
      margin-top 0px

  .subtitle
    margin-right 9px
    color #999

  h4
    margin-top 24px
    margin-bottom 18px

    .subtitle
      margin-top 1px
      font-weight 300
      margin-right 15px
      font-size 15px

.side-panel .sub-panel
  a.more-btn
    margin-right 0px
    float: right
    opacity: 0
    &:hover
      text-decoration none

  &:hover a.more-btn
    opacity: 1


.side-row
  clearfix()
  margin-bottom 12px + 5px
  &:first-child
    margin-top 5px

  .btn, .toggle-btn
    margin-right 0px
    margin-top -5px

.side-panel .popover
  width auto
  .control-label
    margin-bottom: 4px
  .input-group
    margin-bottom: 8px
  .control-group:not(:first-child)
    margin-top: 8px

  .jog-panel:nth-child(1) .popover.right
    margin-top 40px
    .arrow
      top 48px

#manual_ctrl.active
  display flex
  flex-flow row
  width 100%

  .canvas-container
    margin-bottom 10px
    flex 1 1 auto

  .side-panel
    width 270px


// TODO: This needs to be moved or deleted
.console-panel
  //height: 255px - 20px
  display flex
  flex-flow column

  .console-history
    flex 1 1 auto
    overflow-y scroll
    background-color white
    border 1px solid #CCC
    box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
    padding 5px

.console-form
  width 100%
  display flex
  flex-flow row

  input
    flex 1 1 auto
    margin-bottom 0px
    margin-right 10px


.canvas-container
  video
    width 100%
  canvas.textureCanvas, canvas.frameCaptureCanvas
    opacity 0
    position absolute
    left -100000px
    top 0px
